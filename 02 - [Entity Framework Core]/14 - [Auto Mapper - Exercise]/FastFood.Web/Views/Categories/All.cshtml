@model IList<FastFood.Web.ViewModels.Categories.CategoryAllViewModel>

@{
    ViewData["Title"] = "All Categories";
}
<h1 class="text-center">All Categories</h1>
<hr class="hr-2" />
<table class="table mx-auto">
    <thead>
    <tr class="row">
        <th class="col-md-1">#</th>
        <th class="col-md-2">Category</th>
    </tr>
    </thead>
    <tbody>
    @for(var i = 0; i < Model.Count(); i++)
    {
        <tr class="row">
            <th class="col-md-1">@(i+1)</th>
            <td class="col-md-2">@Model[i].Name</td>
        </tr>
    }
    </tbody>
</table>

<div class="button-holder d-flex justify-content-center text-center">
    <a asp-controller="Categories" asp-action="Create" class="btn btn-success">Create</a>

    <a asp-controller="Home" asp-action="Index" class="btn btn-info">Back</a>
</div>