@using RealEstates.Services.Models
@model IEnumerable<RealEstates.Services.Models.DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome to RealEstates BG</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-striped table-hover table-sm">
    <tr>
        <th>District</th>
        <th>Avg. Price</th>
        <th>Min Price</th>
        <th>Max Price</th>
        <th>Properties Count</th>
    </tr>
    @foreach (var district in this.Model.Where(m => m.PropertiesCount >= 20))
    {
        <tr>
            <td>@district.Name</td>
            <td>@district.AveragePrice.ToString("f2")€</td>
            <td>@district.MinPrice€</td>
            <td>@district.MaxPrice€</td>
            <td>@district.PropertiesCount</td>
        </tr>
    }
</table>
